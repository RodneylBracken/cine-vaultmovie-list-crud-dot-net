@model IEnumerable<CineVault.Models.Movie>

@{
    ViewBag.Title = "Movie List";
}

<div class="">
    <div class="inner-content">
        <h2>Movie List</h2>
        <p>
            <span class="btn btn-back">
                @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
            </span>      
        </p>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.ActionLink("Title", "Index", new { sortOrder = ViewBag.TitleSortParm })
                    </th>
                    <th>
                        @Html.ActionLink("Format", "Index", new { sortOrder = ViewBag.FormatSortParm })
                    </th>
                    <th>
                        @Html.ActionLink("Length", "Index", new { sortOrder = ViewBag.LengthSortParm })
                    </th>
                    <th>
                        @Html.ActionLink("Release Year", "Index", new { sortOrder = ViewBag.ReleaseYearSortParm })
                    </th>
                    <th>
                        @Html.ActionLink("Rating", "Index", new { sortOrder = ViewBag.RatingSortParm })
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Format)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Length)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ReleaseYear)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Rating)
                        </td>
                        <td>
                            <span class="btn-main"> 
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                            </span>
                            <span class="btn-main">
                                @Html.ActionLink("Details", "Details", new { id = item.Id })
                            </span>
                            <span class="btn-main">
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                            </span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
